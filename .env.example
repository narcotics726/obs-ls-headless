# CouchDB Configuration
COUCHDB_URL=http://localhost:5984
COUCHDB_USERNAME=admin
COUCHDB_PASSWORD=password
COUCHDB_DATABASE=obsidian-livesync

# Encryption Configuration
# IMPORTANT: If your Obsidian LiveSync uses end-to-end encryption,
# you MUST set this to match your LiveSync passphrase.
# Leave empty if your LiveSync database is not encrypted.
COUCHDB_PASSPHRASE=your-encryption-passphrase-here

# Server Configuration
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Vault Configuration
# Absolute path where notes will be persisted locally.
# Defaults to ./vault when unset.
VAULT_PATH=/path/to/local/vault

# Sync Configuration
SYNC_INTERVAL=60000
AUTO_SYNC_ENABLED=true

# AI Provider Configuration (optional, for future use)
# AI_PROVIDER=openai
# AI_API_KEY=your-api-key-here
